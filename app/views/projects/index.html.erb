<h1><center>SIMPLE TODO LISTS</center></h1>
<h2><center>FROM RUBY GARAGE</center></h2>


<div class="project_and_tasks">
  <% @projects.each do |project| %>
    <div class="project">
      <div class="name"><%= project.name %></div>
      <div class="action edit"><%= link_to '', edit_project_path(project) %></div>
      <div class="action delete"><%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>

    <div class="task">
      <%= form_for(@task || Task.new) do |f| %>
        <div class="icon"><%= image_tag("plus.png")%></div>
        <div class="name"><%= f.text_field :name, :placeholder => "Start typing here to create a task...", :size => 75%><%= f.hidden_field :project_id, :value => project.id %></div>
        <div class="button"><%= f.submit '    Add Task    ', :class => 'button_add_task' %></div>
      <% end %>
    </div>

    <ul class="tasks">
      <% project.tasks.each_with_index do |task, index| %>
        <li class="task-element <%= (index % 2 == 0) ? "white" : "grey" %>">
          <div class="checkbox"><input type="checkbox"></div>
          <div class="name"><%= task.name %></div>
          <div class="actions">
            <div class="action order"><%= link_to 'Show', task %></div>
            <div class="action edit"><%= link_to 'Edit', edit_task_path(task) %></div>
            <div class="action delete"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
  <br>
</div>
